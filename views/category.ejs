<%- include('header') %>

    <div class="container">
        <h2>Danh mục</h2>
        <a href="/create-category" class="btn btn-sm btn-primary">Thêm mới danh mục</a>
        <hr>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% cats.forEach((item, key)=> { %>
                    <tr>
                        <td>
                            <%= item.id %>
                        </td>
                        <td>
                            <%= item.name %>
                        </td>
                        <td>
                            <%= item.status==0 ? 'Tạm ẩn' : 'Hiển thị' %>
                        </td>
                        <td>
                            <a onclick="return confirm('Chắc chưa?')" href="/delete-category/<%= item.id %>"
                                class="btn btn-danger">Xóa</a>

                                <a  href="/edit-category/<%= item.id %>"
                                    class="btn btn-primary">Sửa</a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>

    </div>

    <%- include('footer') %>